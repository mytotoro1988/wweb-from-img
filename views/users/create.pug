extends ../layouts/common


block content
    h2 Create user
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action='/users/create', method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input.form-control#name(type='text',name = 'name',value=values ? values.name : "")
      
        .form-group
            label(for="name") Phone
            input.form-control#name(type='text',name = 'phone',value=values ? values.phone : '')
        
        .form-group
            label(for="avatar") Avatar
            input.form-control-file#Avatar(type='file',name = 'avatar')

        button.btn.btn-primary Create